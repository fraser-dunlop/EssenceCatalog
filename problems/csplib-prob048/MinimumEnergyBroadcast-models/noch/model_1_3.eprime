language ESSENCE' 1.0

given numNodes: int(1..)
given maxPower: int(1..)
given initialNode: int(1..)
given linkCosts: matrix indexed by [int(1..numNodes), int(1..numNodes)] of int(0..maxPower)
find nodeBroadcastPower: matrix indexed by [int(1..numNodes)] of int(0..maxPower)
find directChildrenMatrix_Occurrence: matrix indexed by [int(1..numNodes), int(1..numNodes)] of bool
find totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker: matrix indexed by [int(1..numNodes)] of int(0..numNodes)
find totalChildrenMatrix_ExplicitVarSizeWithMarker_Values:
        matrix indexed by [int(1..numNodes), int(1..numNodes)] of int(1..numNodes)
minimising sum([nodeBroadcastPower[i] | i : int(1..numNodes)])
such that
    and([i = j \/
         sum([toInt(directChildrenMatrix_Occurrence[i, q14] /\ directChildrenMatrix_Occurrence[j, q14])
                  | q14 : int(1..numNodes)])
         = 0 | i : int(1..numNodes), j : int(1..numNodes)]),
    totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[initialNode] = numNodes,
    and([or([q9 <= totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node] /\
             totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[node, q9] = node
                 | q9 : int(1..numNodes)])
         /\
         sum([toInt(directChildrenMatrix_Occurrence[node, i]) *
              catchUndef(totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[i], 0)
                  | i : int(1..numNodes)])
         = totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node] - 1
         /\
         and([directChildrenMatrix_Occurrence[node, childNode] ->
              and([q11 <= totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[childNode] ->
                   or([q13 <= totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node] /\
                       totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[node, q13] =
                       totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[childNode, q11]
                           | q13 : int(1..numNodes)])
                       | q11 : int(1..numNodes)])
              /\ linkCosts[node, childNode] != 0
              /\ nodeBroadcastPower[node] >= linkCosts[node, childNode]
                  | childNode : int(1..numNodes)])
             | node : int(1..numNodes)]),
    and([and([q5 + 1 <= totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[q4] ->
              totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[q4, q5] <
              totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[q4, q5 + 1]
                  | q5 : int(1..numNodes - 1)])
             | q4 : int(1..numNodes)]),
    and([and([q6 > totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[q4] ->
              totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[q4, q6] = 1
                  | q6 : int(1..numNodes)])
             | q4 : int(1..numNodes)])

